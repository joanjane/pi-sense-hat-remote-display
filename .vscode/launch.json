  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug message",
      "program": "${workspaceFolder}/scripts/run-message.js",
      "runtimeArgs": [
        "--experimental-modules"
      ],
      "env": {
        "WS_SERVER_PORT": "8080"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug server",
      "program": "${workspaceFolder}/scripts/run-server.js",
      "runtimeArgs": [
        "--experimental-modules"
      ],
      "env": {
        "SERVER_URI": "ws://localhost:8080",
        "TARGET": "test-web-client"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug joystick",
      "program": "${workspaceFolder}/scripts/run-joystick-listener.js",
      "runtimeArgs": [
        "--experimental-modules"
      ],
      "env": {
        "SERVER_URI": "ws://localhost:8080",
        "TARGET": "test-web-client"
      }
    }
  ]
}